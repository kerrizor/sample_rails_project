<h3>Upload CSV of IDs</h3>

<%= form_tag(clearance_batches_path, multipart: true, class: 'form-inline', role: 'form') do %>
  <div class="form-group">
    <%= label_tag 'csv_batch_file', 'Select batch file' %>
    <%= file_field_tag 'csv_batch_file', class: 'form-control' %>
  </div>
  <%= submit_tag 'upload batch file', class: 'btn btn-primary' %>
<% end %>

<hr>

<h3>Enter IDs manually</h3>

<%= form_tag(clearance_batches_path, class: 'form-inline', role: 'form') do %>
  <div id="batch_id_form">
    <div class="form-group">
      <%= label_tag 'batch_ids', 'Enter IDs, one per line' %><br>
      <%= text_field_tag 'batch_ids[]', '', class: 'form-control' %>
    </div>

  </div>

  <div>
    <button type="button" name="button" id="add_batch_id_field" class="btn btn-info">Add additional ID</button><br>
    <%= submit_tag 'Submit IDs for Clearancing', class: 'btn btn-primary' %>
  </div>
<% end %>
